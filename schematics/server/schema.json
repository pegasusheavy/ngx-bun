{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "SchematicsServer",
  "title": "Server schematic options",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "port": {
      "type": "number",
      "description": "The port for the SSR server.",
      "default": 4000
    },
    "serverFileName": {
      "type": "string",
      "description": "Name of the server file.",
      "default": "server.ts"
    }
  },
  "required": ["project"]
}
